<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/ColorBackgroundDarkGray"
    tools:context="com.olgazelenko.helloandroid.MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/social"
        android:background="@color/ColorBackgroundDarkGray"
        android:scaleType="fitCenter"
        android:src="@drawable/aboutudacity" />

    <LinearLayout
        android:id="@+id/social"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/address"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:alpha="0.5"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/google"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:alpha="0.5"
            android:src="@drawable/google" />

        <ImageView
            android:id="@+id/Instagram"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:alpha="0.5"
            android:src="@drawable/instagram" />

        <ImageView
            android:id="@+id/linkedin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:alpha="0.5"
            android:src="@drawable/linkedin" />

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:alpha="0.5"
            android:src="@drawable/twitter" />

        <ImageView
            android:id="@+id/pinterest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:alpha="0.5"
            android:src="@drawable/pinterest" />
    </LinearLayout>

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/phone"
        android:autoLink="map"
        android:gravity="center"
        android:text="@string/address"
        android:textColor="@color/ColorTextLightWhite"
        android:textColorLink="@android:color/white" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/web"
        android:autoLink="phone"
        android:gravity="center"
        android:text="@string/phone"
        android:textColor="@color/ColorTextLightWhite"
        android:textColorLink="@android:color/white" />

    <TextView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:autoLink="web"
        android:gravity="center"
        android:text="@string/web"
        android:textColor="@color/ColorTextLightWhite"
        android:textColorLink="@android:color/white" />

</RelativeLayout>